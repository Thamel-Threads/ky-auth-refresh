{
  "name": "@thamel-threads/ky-auth-refresh",
  "version": "1.0.1",
  "description": "Automatic authentication token refresh for Ky HTTP client",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test",
    "release": "changeset publish",
    "changeset": "changeset",
    "version-packages": "changeset version"
  },
  "keywords": [
    "ky",
    "authentication",
    "authorization",
    "refresh-token",
    "access-token",
    "http-client",
    "fetch",
    "typescript",
    "esm"
  ],
  "author": "Thamel Threads",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thamel-threads/ky-auth-refresh.git"
  },
  "bugs": {
    "url": "https://github.com/thamel-threads/ky-auth-refresh/issues"
  },
  "homepage": "https://github.com/thamel-threads/ky-auth-refresh#readme",
  "peerDependencies": {
    "ky": "^1.10.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@eslint/js": "^9.15.0",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/coverage-v8": "^2.1.4",
    "@vitest/ui": "^2.1.4",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "tsup": "^8.0.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
